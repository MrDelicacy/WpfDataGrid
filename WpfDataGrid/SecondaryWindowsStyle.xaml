<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="Label">
        <Setter Property="Margin" Value="10,10,0,0"/>
        <Setter Property="Height" Value="28"/>
    </Style>
    <Style TargetType="TextBox">
        <Setter Property="Margin" Value="0,10,0,0"/>
        <Setter Property="Height" Value="28"/>
    </Style>

    <Style TargetType="ComboBox">
        <Setter Property="Margin" Value="0,10,0,0"/>
        <Setter Property="Height" Value="28"/>
    </Style>
    <Style x:Key="CancelOkButtons" TargetType="Button">
            <Setter Property="Background" Value="#F4F9FD"/>
            <Setter Property="BorderBrush" Value="#D0DDF3"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Width" Value="60"/>
            <Setter Property="Margin" Value="3"/>
        </Style>
    <Style x:Key="Lbl_tab" TargetType="{x:Type Label}">
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="Height" Value="24"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Padding" Value="10,0,10,0"/>
    </Style>
    <Style x:Key="Txt_tab" TargetType="{x:Type TextBox}">
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Height" Value="28"/>
        <Setter Property="Width" Value="60"/>
    </Style>
